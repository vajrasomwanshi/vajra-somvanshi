{% style %}
    @font-face {
        font-family: 'lustria';
        src: url('{{ "lustria-regular.ttf" | asset_url }}') format('truetype');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }
    .section-{{ section.id }}{
        padding-top: {{ section.settings.padding_top  }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .custom-product-grid__title{
        font-family: "lustria", serif;
        font-weight: 400;
        font-size: 36px;
        line-height: 120%;
        vertical-align: middle;
        margin: 0 0 30px 0;
    }
    .custom-product-grid-wrapper{
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
    }
    .custom-product-grid__item{
        width: 32%;
        height: 444px;
        position: relative;
    }
    .custom-product-grid__item img{
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .custom-quickview-atc-btn{
        all: unset;
        position: absolute;
        z-index: 999;
    }
    {% for block in section.blocks %}
        .block-id-{{ block.id }} .custom-quickview-atc-btn{
            top: {{ block.settings.vertical }}%;
            left: {{ block.settings.horizontal }}%;
            transform: translate(-{{ block.settings.vertical }}%, -{{ block.settings.horizontal }}% );

        }
    {% endfor %}
{% endstyle %}
<div class="page-width custom-product-grid-container section-{{ section.id }}">
    {% if section.settings.heading != blank %}
        <h3 class="custom-product-grid__title">
            {{ section.settings.heading }}
        </h3>
    {% endif %}
    <div class="custom-product-grid-wrapper">
        {% for block in section.blocks %}
            <div class="custom-product-grid__item block-id-{{ block.id }}">
                <img src="{{ block.settings.product.featured_media |  image_url  }}" alt="{{ block.settings.product.featured_media.alt }}" width="{{ block.settings.product.featured_media.width }}" height="{{ block.settings.product.featured_media.height }}">
                <button class="custom-quickview-atc-btn">
                    {{ 'icon-atc-plus.svg' | inline_asset_content }}
                </button>
            </div>
        {% endfor %}
    </div>
</div>
{% schema %}
{
    "name": "Custom Product grid",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "label": "Top spacing",
            "min": 0,
            "max": 100,
            "step": 10,
            "default": 90
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "label": "Bottom spacing",
            "min": 0,
            "max": 100,
            "step": 10,
            "default": 50
        }
    ],
    "blocks": [
        {
            "type": "product",
            "name": "Product",
            "limit": 6,
            "settings": [
                {
                    "type": "product",
                    "id": "product",
                    "label": "Select Product"
                },
                {
                    "type": "header",
                    "content": "Add to cart icon position"
                },
                {
                    "type": "range",
                    "id": "horizontal",
                    "label": "Horizontal position",
                    "min": 0,
                    "max": 100,
                    "default": 0,
                    "step": 1
                },
                {
                    "type": "range",
                    "id": "vertical",
                    "label": "Vertical position",
                    "min": 0,
                    "max": 100,
                    "default": 0,
                    "step": 1
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Custom Product grid"
        }
    ]
}
{% endschema %}